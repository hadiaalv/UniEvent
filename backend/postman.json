{
  "info": {
    "name": "UniEvent Backend API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api"
    },
    {
      "key": "token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register User / Admin",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"123456\",\n  \"role\": \"ADMIN\"\n}"
            },
            "url": "{{baseUrl}}/auth/register"
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"123456\"\n}"
            },
            "url": "{{baseUrl}}/auth/login"
          }
        }
      ]
    },
    {
      "name": "Events",
      "item": [
        {
          "name": "Get Approved Events (Public)",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/events"
          }
        },
        {
          "name": "Create Event (Admin)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Tech Talk\",\n  \"description\": \"AI and the future\",\n  \"category\": \"Technology\",\n  \"date\": \"2025-02-20\",\n  \"organizer\": \"CS Society\"\n}"
            },
            "url": "{{baseUrl}}/events"
          }
        },
        {
          "name": "Approve Event (Super Admin)",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{baseUrl}}/events/{{eventId}}/approve"
          }
        },
        {
          "name": "Mark Interested",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{baseUrl}}/events/{{eventId}}/interested"
          }
        },
        {
          "name": "Mark Going",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{baseUrl}}/events/{{eventId}}/going"
          }
        }
      ]
    },
    {
      "name": "Super Admin",
      "item": [
        {
          "name": "Approve Admin Account",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{baseUrl}}/admin/approve-admin/{{adminId}}"
          }
        }
      ]
    }
  ]
}
